{
  "manifest_version": 2,

  "name": "Shulgi: The multilingual helper",
  "description": "Like Shulgi from the 3 millenium, this app can handle many languages",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
      "page": "background.html",
      "persistant": false
  },
       "commands": {
          "openGoogleTranslate": {
            "suggested_key": {
              "default": "Ctrl+Shift+Y",
              "linux": "Ctrl+Shift+Y",
              "mac": "MacCtrl+Shift+Y"
            },
            "description": "Open Clipboard Contents in Google Translate"
          },
          "_execute_browser_action": {
            "suggested_key": {
              "default": "Ctrl+Shift+Y",
              "mac": "MacCtrl+Shift+U",
              "chromeos": "Ctrl+Shift+U",
              "linux": "Ctrl+Shift+U"
            }
          }
        },

  "permissions": [
    "clipboardWrite",
    "clipboardRead",
    "activeTab",
    "https://ajax.googleapis.com/"
  ]  
}
